//Bubble_Sort

#include<stdio.h>
#include<conio.h>
void main()
{
	int a[100],i,j,k,n,t;
	clrscr();

	printf("enter how many elements you want\n");
	scanf("%d",&n);

	printf("enter element\n");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]) ;
	}
	printf("print element\n") ;
	for(i=0;i<n;i++)
	{
		printf("%d",a[i]);

	}
	for(i=0;i<=n-2;i++)
	{
		for(j=0;j<=n-2-i;j++)
		{
			if(a[j]>a[j+1])
			{
				t=a[j];
				a[j]=a[j+1];
        a[j+1]=t;			
      }

		}

	}
	printf("print element after sorting\n");
	for(i=0;i<n;i++)
	{
		printf(" %d",a[i]);

	}
	getch();

}
